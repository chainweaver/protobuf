      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "postman.setGlobalVariable(\"commonTests\", (schemeName) => {",
          "    tests[\"Content-Type header is application/json\"] = postman.getResponseHeader(\"Content-Type\").match(/application\\/json/);",
          "    ",
          "    var res = JSON.parse(responseBody);",
          "    const schema = pm.variables.get(schemeName);",
          "    console.log(schema);",
          "    tests[\"Schema is valid\"] = tv4.validate(res, schema);",
          "});",
          ""
        ]
      }
    }
  ]
}